@command
def test(app, shell="sh", verbose=False, debug=False):
    # XXX Restore this when check_program works on Windows
    # check_program(shell)

    if verbose:
        ENV["VERBOSE"] = "1"

    if debug:
        ENV["DEBUG"] = "1"

    run(f"{shell} install.sh")
    run(f"{shell} uninstall.sh")

@command
def big_test(app, verbose=False, debug=False):
    if verbose:
        ENV["VERBOSE"] = "1"

    if debug:
        ENV["DEBUG"] = "1"

    run(f"sh uninstall.sh") # No existing installation

    run(f"sh install.sh") # No existing installation and no existing backup
    run(f"sh install.sh") # Creates a backup
    run(f"sh install.sh") # Backs up the backup

    run(f"sh uninstall.sh") # No existing backup
    run(f"sh uninstall.sh") # Creates a backup
    run(f"sh uninstall.sh") # Backs up the backup

    if call("uname").startswith("CYGWIN"):
        return

    for shell in "ash", "bash", "dash", "ksh", "zsh":
        if not which(shell):
            continue

        test(app, shell=shell, verbose=verbose, debug=debug)

@command
def lint(app):
    check_program("shellcheck")

    run("shellcheck --enable all install.sh")

@command
def clean(app):
    remove(join(get_home_dir(), ".cache", "artemis-install-script"))
